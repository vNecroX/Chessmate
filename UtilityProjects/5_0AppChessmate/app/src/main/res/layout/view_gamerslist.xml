<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    android:background="#000000"
    tools:context=".View_GamersList" >

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etGamersList"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#ffffff"
        android:cursorVisible="false"
        android:editable="false"
        android:enabled="false"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center"
        android:hint="@string/etGamersList"
        android:lineHeight="0dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColorHint="@color/colorTurquoise0"
        android:textSize="32sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGamersList"
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:layout_above="@+id/btnInvitePlayer"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/adapter_gamerslist"
        android:background="#000000">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnInvitePlayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/btnInvitePlayer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:background="@drawable/gradient0"
        android:textSize="26sp"/>

</RelativeLayout>
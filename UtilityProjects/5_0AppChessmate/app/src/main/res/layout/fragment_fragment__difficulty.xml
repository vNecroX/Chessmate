<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="250dp"
    tools:context=".Fragment.Fragment_Difficulty"
    android:background="@drawable/gradient9" >

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etDifficultyTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="#ffffff"
        android:cursorVisible="false"
        android:editable="false"
        android:enabled="false"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center"
        android:hint="@string/etDifficultyTitle"
        android:lineHeight="0dp"
        android:singleLine="true"
        android:textColorHint="@color/colorTurquoise0"
        android:textSize="28sp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etEmptyOne"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/colorTurquoise0"
        android:cursorVisible="false"
        android:editable="false"
        android:enabled="false"
        android:gravity="center"
        android:lineHeight="0dp"
        android:singleLine="true"
        android:layout_below="@id/etDifficulty" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/etEmptyTwo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmptyOne"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/colorTurquoise0"
        android:cursorVisible="false"
        android:editable="false"
        android:enabled="false"
        android:gravity="center"
        android:lineHeight="0dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnDifficulty"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_below="@+id/etDifficultyTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/gradient8"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/btnDifficulty"
        android:textSize="17sp" />



</RelativeLayout>
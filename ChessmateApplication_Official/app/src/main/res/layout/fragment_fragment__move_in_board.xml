<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="120dp"
android:layout_height="70dp"
android:background="#575b5e"
tools:context=".Fragment_MoveInBoard">

    <TextView
        android:id="@+id/tVMoveIA"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:gravity="center"
        android:fontFamily="@font/roboto_light"
        android:text="En espera de movimiento de la IA en el tablero"/>

    <TextView
        android:id="@+id/tVMoveYou"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        android:text="En espera de tu movimiento en el tablero"/>

    <TextView
        android:id="@+id/tVMoveOpponent"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        android:text="En espera del movimiento de tu oponente en tablero"/>

    <TextView
        android:id="@+id/tVMoveInBoard"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        android:text="En espera del movimiento en el tablero"/>

</FrameLayout>